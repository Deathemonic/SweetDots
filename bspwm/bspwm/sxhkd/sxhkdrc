# Terminal
super + Return
    kitty -c $HOME/.config/bspwm/kitty/kitty.conf

# Rofi ------------------

# Rofi App Launcher
alt + F1
	sh $HOME/.config/bspwm/bin/rofi/launcher

# Rofi Network Menu
super + n
	$HOME/.config/bspwm/bin/rofi/network

# Rofi Menus/Applets
super + {s,p,b,w,r}
	sh $HOME/.config/bspwm/bin/rofi/{screenshot,power,bluetooth,window,run}


# Apps ------------------

# Launch Apps
super + {e,w,g}
	{nautilus,firefox,gedit}

# Terminal Apps
ctrl + alt + {v,r,h}
	kitty -c $HOME/.config/bspwm/kitty/kitty.conf -e {nvim,ranger,htop}

# Eww ------------------

# Resources
super + alt + r
    sh $HOME/.config/bspwm/bin/eww/resources

# Calendar
super + alt + c
    sh $HOME/.config/bspwm/bin/eww/cal

# Dashboard
super + d
    sh $HOME/.config/bspwm/bin/eww/dashboard

# Lockscreen
super + alt + l
    sh $HOME/.config/bspwm/bin/eww/lock

# System ------------------

# Take a screenshot
Print
	sh $HOME/.config/bspwm/bin/takeshot --now
	
# Take screenshot in 5 second
alt + Print	
	sh $HOME/.config/bspwm/bin/takeshot --in5

# Take screenshot in 10 second
shift + Print	
	sh $HOME/.config/bspwm/bin/takeshot --in10

# Take screenshot of active window
ctrl + Print
	sh $HOME/.config/bspwm/bin/takeshot --win

# Take screenshot of area
ctrl + alt + Print
	sh $HOME/.config/bspwm/bin/takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	sh $HOME/.config/bspwm/bin/brightness{ up, down}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	sh $HOME/.config/bspwm/bin/volume{ up, down}

XF86AudioMute
	sh $HOME/.config/bspwm/bin/volume mute
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Reload sxhkd configuration file
super + Escape
	pkill -USR1 -x sxhkd

# Hotkeys ------------------

# Close App
super + {_,shift + }x
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
       xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + alt + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
# Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {20 0,0 20,0 -20,-20 0}

# Hide/Unhide Window
super + shift + i
	winmask		

# Preselect the direction
super + ctrl + alt +{Left,Right,Up,Down}
	bspc node -p {west,east,north,south}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel