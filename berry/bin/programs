#!/bin/bash

# Autostart Programs

# Kill already running processs
_ps=(sxhkd polybar picom dunst ksuperkey mpd xfce-polkit xfce4-power-manager)
for _prs in "${_ps[@]}"; do
	if [[ `pidof ${_prs}` ]]; then
		killall -9 ${_prs}
	fi
done

# Load Xresources
xrdb $HOME/.config/berry/Xresources &

# Fix cursor
xsetroot -cursor_name left_ptr &

# Polkit agent (Gnome)
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Power Management
xfce4-power-manager &

# Keybinds
sxhkd -c $HOME/.config/berry/sxhkd/sxhkdrc &

# Super Keys
ksuperkey -e 'Super_L=Alt_L|F1' &
ksuperkey -e 'Super_R=Alt_L|F1' &

# Set/Restore wallpaper
feh --bg-fill -r -z $HOME/.config/berry/wallpapers

# Polybar
sh $HOME/.config/berry/bin/polybar/bar

# Notification
sh $HOME/.config/berry/bin/dunst

# Compositor
sh $HOME/.config/berry/bin/compositor

# Start mpd
exec mpd &
exec mpDris2 &
